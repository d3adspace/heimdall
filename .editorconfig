[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[{messages.*, spring.schemas, spring.handlers, messages, *.properties}]
indent_style = space
indent_size = 4

[.editorconfig]
indent_style = space
indent_size = 4

[{*.cql, *.ddl, *.sql}]
indent_style = space
indent_size = 4

[{*.gradle, *.groovy, *.gdsl, *.gy, *.gant}]
indent_style = space
indent_size = 4

[{*.module, *.hphp, *.inc, *.phtml, *.php5, *.php4, *.php}]
indent_style = space
indent_size = 4

[{*.yml, *.yaml}]
indent_style = space
indent_size = 2
